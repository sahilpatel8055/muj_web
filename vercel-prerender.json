{
  "functions": {
    "app/routes/**/*.tsx": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "public, max-age=3600, s-maxage=86400, stale-while-revalidate=86400"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/prerender",
      "schedule": "0 */6 * * *"
    }
  ],
  "env": {
    "PRERENDER_SERVICE_URL": "https://service.prerender.io/",
    "PRERENDER_TOKEN": "@prerender-token"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        }
      ]
    }
  ]
}